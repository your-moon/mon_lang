функц үндсэн() -> тоо {
    зарла а:тоо = 10;
    зарла б:тоо = 5;
    зарла в:тоо = 2;

    // haritsuulalt arithmetic
    хэрэв а + б * 2 > в * 10 бол {
        зарла н:тоо = 1;
        буц 1;  // 10 + (5 * 2) > (2 * 10) -> 20 > 20 is false
    }

    // haritsuulalt logic
    хэрэв а > б + в && б * 2 == 10 || в * 3 < б бол {
        буц 2;  // (10 > 7 && 10 == 10) || 6 < 5 -> (true && true) || false -> true
    }

    // nested uildel
    зарла г:тоо = (а + б) * (в + 3) / (2 + 1);  // (15 * 5) / 3 -> 25
    буц г;
}
