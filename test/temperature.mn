extern функц хэвлэ(н тоо64) -> хоосон  {}
extern функц унш() -> тоо64 {}

// Цельсийг Фаренгейт болгох
функц цельсФаренгейт(температур тоо64) -> тоо64 {
    буц (температур * 9 / 5) + 32;
}

// Фаренгейтийг Цельс болгох
функц фаренгейтЦельс(температур тоо64) -> тоо64 {
    буц (температур - 32) * 5 / 9;
}

функц үндсэн() -> тоо {
    // Хөрвүүлэх төрөл (1: Цельс->Фаренгейт, 2: Фаренгейт->Цельс)
    зарла төрөл: тоо64 = унш();
    
    // Температурын утга
    зарла температур: тоо64 = унш();
    
    // Хөрвүүлэх
    зарла хариу: тоо64 = 0;
    
    хэрэв төрөл == 1 бол {
        хариу = цельсФаренгейт(температур);
    }
    
    хэрэв төрөл == 2 бол {
        хариу = фаренгейтЦельс(температур);
    }
    
    // Хариуг хэвлэх
    хэвлэ(хариу);
    
    буц 0;
} 