extern функц хэвлэ_мөр(н мөр) -> хоосон  {}
extern функц хэвлэ(н тоо64) -> хоосон  {}
extern функц унш() -> тоо64  {}

// Нэмэх үйлдэл
функц нэмэх(а тоо64, б тоо64) -> тоо64 {
    буц а + б;
}

// Хасах үйлдэл
функц хасах(а тоо64, б тоо64) -> тоо64 {
    буц а - б;
}

// Үржих үйлдэл
функц үржих(а тоо64, б тоо64) -> тоо64 {
    буц а * б;
}

// Хуваах үйлдэл
функц хуваах(а тоо64, б тоо64) -> тоо64 {
    хэрэв б == 0 бол {
        буц 0; // Тэгээр хуваах боломжгүй
    }
    буц а / б;
}

функц үндсэн() -> тоо {
    // Эхний тоо
    хэвлэ_мөр("Та эхний тоогоо оруулна уу: ");
    зарла а: тоо64 = унш();

    // Үйлдлийн тэмдэг (1: нэмэх, 2: хасах, 3: үржих, 4: хуваах)
    хэвлэ_мөр("Та үйлдлийн тэмдэгийг оруулна уу: /1 нэмэх, /2 хасах, /3 үржих, /4 хуваах");
    зарла үйлдэл: тоо64 = унш();

    // Хоёр дахь тоо
    хэвлэ_мөр("Та хоёр дахь тоогоо оруулна уу: ");
    зарла б: тоо64 = унш();

    // Үйлдлийг гүйцэтгэх
    зарла хариу: тоо64 = 0;

    хэрэв үйлдэл == 1 бол {
        хариу = нэмэх(а, б);
    }

    хэрэв үйлдэл == 2 бол {
        хариу = хасах(а, б);
    }

    хэрэв үйлдэл == 3 бол {
        хариу = үржих(а, б);
    }

    хэрэв үйлдэл == 4 бол {
        хариу = хуваах(а, б);
    }

    // Хариуг хэвлэх
    хэвлэ_мөр("Хариу: ");
    хэвлэ(хариу);

    буц 0;
}
