extern функц хэвлэ(н тоо64) -> хоосон  {}
extern функц унш() -> тоо  {}

функц санамсаргүйТоо(н тоо64) -> тоо64 {
    зарла одоо: тоо64 = 42;
    зарла шинэ: тоо64 = (одоо * 1103515245 + 12345) % 2147483647;
    буц шинэ % н;
}

функц таахТоглоом() -> хоосон {
    зарла зорилтотТоо: тоо64 = санамсаргүйТоо(100) + 1;
    зарла оролдлого: тоо64 = 0;
    зарла хамгийнИхОролдлого: тоо64 = 10;

    давтах оролдлого < хамгийнИхОролдлого бол {
        зарла таамаглал: тоо64 = унш();
        оролдлого = оролдлого + 1;

        хэрэв таамаглал < зорилтотТоо бол {
            хэвлэ(1); // 1 means too low
        }

        хэрэв таамаглал > зорилтотТоо бол {
            хэвлэ(2); // 2 means too high
        }

        хэрэв таамаглал == зорилтотТоо бол {
            хэвлэ(3); // 3 means correct
            хэвлэ(оролдлого);
            буц 0;
        }
    }

    хэвлэ(4); // 4 means game over
    хэвлэ(зорилтотТоо);
}

функц үндсэн() -> тоо {
    таахТоглоом();
    буц 0;
}
